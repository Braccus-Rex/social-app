<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_marginBottom="10dp"

    android:layout_marginTop="10dp"
    android:background="@drawable/ll"

    >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/ll"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Кафе"
                android:id="@+id/header"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/sd"
                    android:alpha=".35"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ул. Грибоедова"
                    android:textSize="14sp"
                    android:id="@+id/location"
                    android:layout_marginRight="2dp"
                    android:paddingLeft="3dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:maxHeight="200dp"
            android:id="@+id/image"
            android:scaleType="centerCrop"
             />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer sit amet accumsan nibh. Proin at turpis vel velit rutrum facilisis. Proin imperdiet venenatis ligula sed efficitur. Morbi convallis eu justo at mattis. Mauris non imperdiet enim. Donec in purus dui. Nullam sagittis ullamcorper tellus, in varius elit."
                android:id="@+id/maintext"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="5" />
        </LinearLayout>
<View
    android:layout_width="fill_parent"
    android:background="#000"
    android:layout_height="1px"
    android:alpha=".5"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_weight=".5"
            android:gravity="end">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_weight="10"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:id="@+id/report"
                    android:src="@drawable/alert"
                    android:layout_marginTop="0dp"
                    android:alpha=".3" />

            </LinearLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                app:mrl_rippleDimension="8dp"
                app:mrl_rippleDuration="500"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleColor="#222222"
                app:mrl_rippleAlpha="0.1"
                app:mrl_rippleHover="true"
                app:mrl_rippleFadeDuration="175"
                app:mrl_rippleDelayClick="false"
                >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="452"
                    android:id="@+id/likescount"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:id="@+id/like"
                    android:src="@drawable/heart"
                    android:layout_marginTop="0dp" />
            </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
